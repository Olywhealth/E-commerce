<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>com.ecommerce.controller.SignupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/admin_signup</url-pattern>
        <url-pattern>/customer_signup</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.ecommerce.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/admin_login</url-pattern>
        <url-pattern>/customer_login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>com.ecommerce.controller.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/add_product</url-pattern>
        <url-pattern>/update_product</url-pattern>
        <url-pattern>/delete_product</url-pattern>
        <url-pattern>/get_product</url-pattern>
        <url-pattern>/get_product_category</url-pattern>
        <url-pattern>/get_all_product</url-pattern>
        <url-pattern>/customer_get_all_product</url-pattern>
        <url-pattern>/customer_get_product_category</url-pattern>
        <url-pattern>/customer_get_product</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>com.ecommerce.controller.CartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/add_product_to_cart</url-pattern>
        <url-pattern>/like_or_unlike</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>firstpage.jsp</welcome-file>
    </welcome-file-list>
</web-app>